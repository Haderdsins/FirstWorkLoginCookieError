@Model.AccountViewModel

@{
    Layout = null;
    var isVisibleRegisterTab = Model?.RegisterViewModel != null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/> <title>Авторизация - TodoList.Mvc</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"/> <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/> <link rel="stylesheet" href="~/TodoList.Mvc.styles.css" asp-append-version="true"/>
</head>
<body>
<div class="container-fluid d-flex align-items-center justify-content-center flex-column" style="min-height: 100vh;">
